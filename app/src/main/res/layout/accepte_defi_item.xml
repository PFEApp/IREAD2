<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:padding="8dp">
    <ImageView
        android:id="@+id/acceptdefi2_activity_img"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/loading_shape"
        android:contentDescription="@string/thumbnail"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_margin="2dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/acceptdefi2_activity_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="@string/title"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/acceptdefi2_activity_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="met un défi à lire ce livre avec vous"
            android:textColor="@color/cardview_dark_background"
            android:maxLines="2"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/acceptdefi2_activity_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:textSize="11sp"
            android:text="Book_name"
            android:maxLines="1"
            android:textStyle="bold"
            />
            <TextView
                android:id="@+id/acceptdefi2_activity_duree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duree"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <Button
                android:id="@+id/acceptdefi2_activity_accepte"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="Accepter"
                />
            <Button
                android:id="@+id/acceptdefi2_activity_refus"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="Refuser"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>